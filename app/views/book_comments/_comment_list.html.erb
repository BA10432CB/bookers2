<% book_show.book_comments.each do |book_comment| %>
  <tr class="book_comments">
    <td>
      <%= link_to(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image(50, 50) %><br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <td id="user_comment_<%= book_comment.id %>">
      <%= render 'book_comments/comment', comment: book_comment %>
    </td>
  </tr>
<% end %>